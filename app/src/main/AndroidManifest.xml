<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hooooong.firebasechatting">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.room.RoomListActivity"
            android:label="@string/title_activity_room_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.signin.SignInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SignTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SignTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".view.signup.DetailSignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SignTheme"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>